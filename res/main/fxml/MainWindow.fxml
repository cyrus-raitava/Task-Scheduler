<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../Visualisation.css" maxHeight="500.0" maxWidth="800.0" minHeight="500.0" minWidth="800.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se306group8.scheduleoptimizer.visualisation.controller.MainController">
  <children>
      <SplitPane dividerPositions="0.9" orientation="VERTICAL">
        <items>
          <AnchorPane minHeight="40.0">
               <children>
                  <TabPane maxHeight="450.0" minHeight="450.0" prefHeight="450.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <tabs>
                        <Tab text="Dashboard">
                           <content>
                              <fx:include fx:id="dashboardPage" source="DashboardPage.fxml" />
                           </content>
                        </Tab>
                      <Tab text="Search Space">
                        <content>
                            <fx:include fx:id="searchSpacePage" source="SearchSpacePage.fxml" />
                        </content>
                      </Tab>
                        <Tab text="Task Graph">
                           <content>
                               <fx:include fx:id="taskGraphPage" source="TaskGraphPage.fxml" />
                           </content>
                        </Tab>
                        <Tab text="Statistics">
                          <content>
                              <fx:include fx:id="statisticsPage" source="StatisticsPage.fxml" />
                          </content>
                        </Tab>
                    </tabs>
                  </TabPane>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="50.0">
               <children>
                    <fx:include fx:id="consolePage" source="ConsolePage.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" VBox.vgrow="ALWAYS" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
  </children>
</VBox>
